			<if test="personalSignature != null and personalSignature != ''">
				#{personalSignature,jdbcType=VARCHAR},
			</if>
			<if test="birthday != null">
				#{birthday,jdbcType=TIMESTAMP},
			</if>
			<if test="createTime != null">
				#{createTime,jdbcType=TIMESTAMP},
			</if>
			<if test="updateTime != null">
				#{updateTime,jdbcType=TIMESTAMP},
			</if>
		</trim>
	</insert>

	<!-- 通过微信openID查询用户信息 -->
	<select id="findByWxOpenId" resultType="com.rao.pojo.entity.RainMember">
		SELECT <include refid="base_column" /> 
		FROM RAIN_MEMBER 
		WHERE wx_openid = #{wxOpenid,jdbcType = VARCHAR}
	</select>

	<!-- 通过用户名或手机号码查询用户信息 -->
    <select id="findByUserNameOrPhoneOrOpenId" resultType="com.rao.pojo.entity.RainMember">
		SELECT <include refid="base_column" />
		FROM RAIN_MEMBER
		where user_name = #{account,jdbcType=VARCHAR}
		or phone = #{account,jdbcType=VARCHAR}
		or wx_openid = #{account,jdbcType=VARCHAR}
	</select>

</mapper> 